<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
    <bean id="udbUserInfoValidator" class="com.guzhi.pay.thrift.udb.UdbUserInfoClientValidator"/>
    
    <bean id="udbUserInfoConfig" class="com.guzhi.pay.thrift.ThriftConfig" init-method="init">
        <property name="clientClassName" value="com.guzhi.pay.thrift.udb.gen.userinfo_service$Client"/>
        <property name="validator" ref="udbUserInfoValidator"/>
        <property name="host1" value="${udb.userinfo.pool1.host}"/>
        <property name="port1" value="${udb.userinfo.pool1.port}"/>
        <property name="host2" value="${udb.userinfo.pool2.host}"/>
        <property name="port2" value="${udb.userinfo.pool2.port}"/>
    </bean>
</beans>