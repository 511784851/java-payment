<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<!-- 启动task任务-->
	<bean id="unQueryTask" class="com.guzhi.pay.task.TaskListener" init-method="init">
		<property name="flag" value="false"></property>
	</bean>
	
	<bean id="queryTask" class="com.guzhi.pay.task.TaskListener" init-method="init">
		<property name="flag" value="true"></property>
	</bean>
	<!-- 默认为10个固定线程的线程池-->
	<bean id="ThreadPoolTemplate"  class="com.guzhi.pay.task.TaskThreadPool" abstract="true">
		<constructor-arg index="0" value="10"/>
	</bean>
	
	<bean id="defaultTaskThreadPool" parent="ThreadPoolTemplate">
		<constructor-arg index="0" value="50"/>
		<constructor-arg index="1" value="task.thread.pool.default"/>
	</bean>
	
	<bean id="taskDispatcher" class="com.guzhi.pay.task.TaskDispatcher" init-method="init">
		<property name="defaultTaskThreadPool" ref="defaultTaskThreadPool"/>
		<property name="poolMapping">
			<map>
				<entry key="zfb">
					<bean parent="ThreadPoolTemplate"><constructor-arg index="1" value="task.thread.pool.zfb"/></bean>
				</entry>
				<entry key="kq">
					<bean parent="ThreadPoolTemplate"><constructor-arg index="1" value="task.thread.pool.kq"/></bean>
				</entry>
				<entry key="q.kq.gate">
					<bean parent="ThreadPoolTemplate"><constructor-arg index="1" value="task.thread.pool.q.kq.gate"/></bean>
				</entry>
				<entry key="kq.gate">
					<bean parent="ThreadPoolTemplate"><constructor-arg index="1" value="task.thread.pool.kq.gate"/></bean>
				</entry>
				<entry key="apple.balance">
					<bean parent="ThreadPoolTemplate"><constructor-arg index="1" value="task.thread.pool.apple.balance"/></bean>
				</entry>
				<entry key="q.zfb.wapalipay">
					<bean parent="ThreadPoolTemplate"><constructor-arg index="1" value="task.thread.pool.q.zfb.wapalipay"/></bean>
				</entry>
			</map>
		</property>
	</bean>
</beans>
