<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="ipFilterRule"  class="com.guzhi.pay.traderule.rule.IpFilterRule" />

	<bean id="payAmountLimitRule"  class="com.guzhi.pay.traderule.rule.PayAmountLimitRule" />
	
	<bean id="paypalBlackRule"  class="com.guzhi.pay.traderule.rule.PaypalBlackRule" />
	
	<bean id="paypalCerAccountRule"  class="com.guzhi.pay.traderule.rule.PaypalCerAccountRule" />
	
	<bean id="timeInnerOrderRule"  class="com.guzhi.pay.traderule.rule.TimeInnerOrderRule" />
	
	<bean id="yyBlackRule"  class="com.guzhi.pay.traderule.rule.YyBlackRule" />
	
	<bean id="yyCorpPaypalRule"  class="com.guzhi.pay.traderule.rule.YyCorpPaypalRule" />
	
	<bean id="ipCorpPaypalRule"  class="com.guzhi.pay.traderule.rule.IpCorpPaypalRule" />
	
	<bean id="paypalCorpIpRule"  class="com.guzhi.pay.traderule.rule.PaypalCorpIpRule" />
	
	<bean id="addressLimitRule"  class="com.guzhi.pay.traderule.rule.AddressLimitRule" />
	
	<bean id="payForPaypalScene" class="com.guzhi.pay.traderule.scene.PayForPaypalScene" >
		<property name="ruleValidatorList">
			<list>
				<ref bean="ipFilterRule"/>
				<ref bean="payAmountLimitRule"/>
				<ref bean="yyBlackRule"/>
			</list>
		</property>
	</bean>
	<bean id="paypalDetailScene" class="com.guzhi.pay.traderule.scene.PaypalDetailScene" >
		<property name="ruleValidatorList">
			<list>
				<ref bean="paypalCerAccountRule"/>
				<ref bean="paypalBlackRule"/>
				<ref bean="timeInnerOrderRule"/>
				<ref bean="yyCorpPaypalRule"/>
				<ref bean="ipCorpPaypalRule"/>
				<ref bean="paypalCorpIpRule"/>
				<ref bean="addressLimitRule"/>
			</list>
		</property>
	</bean>
	<bean id="tradeRuleUtils" class="com.guzhi.pay.traderule.TradeRuleUtils" >
		<property name="sceneValidatorMap">
			<map>
				<entry key="payForPaypal">
					<ref bean="payForPaypalScene"/>
				</entry>
				<entry key="paypalDetail">
					<ref bean="paypalDetailScene"/>
				</entry>
			</map>
		</property>
	</bean>
</beans>
